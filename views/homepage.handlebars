{{!-- // this handlebar displays the blog posts from the database - to do - an each statement to get each blog post --}}

{{#each posts}}
<div class="border">
    <div class="container-sm my-3 d-grid gap-2">
    <button class="btn btn-primary" type="button">
    <div class="row">
    <div class="col-8">
        <a href="/post/{{id}}">{{post_title}}The Title</a>
    </div>
    <div class="col-4">
        <p class="text-end">Posted by {{name}} on{{post_date}}11/5</p>
