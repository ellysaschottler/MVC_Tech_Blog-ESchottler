{{!-- //handlebars to list titles / dates of the posts and have +New Post button--}}

<h1>Your Dashboard</h1>

{{#each posts}}
<a href=posts/"{{id}}">
<div class="container-sm my-3 d-grid gap-2">
    <button class="btn btn-primary" type="button">
    <div class="row">
    <div class="col-8">
        {{blog_title}}
    </div>
    <div class="col-4">
        <p class="text-end">{{blog_date}}</p>
    </div>
    </div>
    </button>
</div>
</a>
{{/each}}

<button class='btn btn-secondary'>+New Post</button>