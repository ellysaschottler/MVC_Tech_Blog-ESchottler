{{!-- Update post - form with title populated and content populated to edit, 
with delete button and update button--}}

<div class="border">
    <div class="container-sm my-3 d-grid gap-2">
        <div class="row">
            <div class="col">
                Edit Post
            </div>
        </div>
    </div>
    <div class="container-sm my-3 d-grid gap-2">
        <div class="row">
            <form id="createPost">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <br><input class="form-control" type="textarea" id="title" value="{post_title}">
                </div>
                <div class="mb-3">
                    <label for="Content" class="form-label">Content:</label>
                    <br><input class="form-control" type="textarea" id="content" value ="{post_content}">
                    </div>
                <button type="submit" class="btn btn-primary btn-sm">Update Post</button>
                <button class="btn btn-primary btn-sm">Delete Post</button>
            </form>
        </div>
    </div>
    </div>